#include "Constants.h"
#include "CommonFunctions.h"
//--------------------------------------------------------------------------------------
// Vertex Shader
//--------------------------------------------------------------------------------------
struct a2v
{
	float3 Position : POSITION;
};

struct v2g
{
	float3 Position : POSITION;
};

struct g2p
{
	float4 Position : SV_Position;
	float Depth		: TEXCOORD;
};

#include "ModulesImmutable.h"

//--------------------------------------------------------------------------------------
// Vertex Shader
//--------------------------------------------------------------------------------------
v2g module_depth_VertexShader( in a2v INPUT )
{
    v2g OUTPUT;

	OUTPUT.Position = INPUT.Position;

	return OUTPUT;
}


//--------------------------------------------------------------------------------------
// Pixel Shader
//--------------------------------------------------------------------------------------
float4 module_depth_PixelShader( in g2p INPUT ) : SV_Target
{
	return float4(INPUT.Depth.xxx, 1.0);
}