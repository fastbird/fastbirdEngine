#include "Constants.h"

//----------------------------------------------------------------------------
// Vertex Shader
//----------------------------------------------------------------------------
struct a2v
{
	float4 pos		: POSITION;
	float4 color	: COLOR;
};

//----------------------------------------------------------------------------
struct v2p
{
	float4 pos		: SV_Position;
	float4 color	: COLOR;
};

//----------------------------------------------------------------------------
v2p line_VertexShader( in a2v IN )
{
    v2p OUT;

	OUT.pos = mul(gWorldViewProj, IN.pos);
	OUT.color = IN.color;

	return OUT;
}

//--------------------------------------------------------------------------------------
// Pixel Shader
//--------------------------------------------------------------------------------------
float4 line_PixelShader( in v2p IN ) : SV_Target
{
	return IN.color;
}